{
    "$schema": "./node_modules/rome/configuration_schema.json",
    "files": {
        "maxSize": 4194304
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noImplicitBoolean": "off",
                "useBlockStatements": "off"
            }
        },
        "ignore": [
            "/node_modules",
            "/.next"
        ]
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 140,
        "indentStyle": "space"
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}